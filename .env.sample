# AirAlert Environment Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Database settings
# Supports SQLite, PostgreSQL, MySQL, etc.
# Examples:
# SQLite: sqlite+aiosqlite:///./airalert.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/airalert
DATABASE_URL=sqlite+aiosqlite:///./airalert.db

# API Keys
# OpenAI API key for LLM-based alert generation
OPENAI_API_KEY=your_openai_api_key_here

# OpenAQ API key (if required in the future)
OPENAQ_API_KEY=

# Mapbox access token for map visualization (frontend)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# LLM settings
LLM_MODEL=gpt-4o

# GIS processing settings
GIS_OUTPUT_DIR=output
CELL_SIZE=0.01

# Alert settings
ALERT_EXPIRY_HOURS=6

# Data sources
DEFAULT_COUNTRY=IN

# Email notification settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_app_password_here
